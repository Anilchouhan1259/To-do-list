<%- include("header") -%>

  <div class="box" id="heading">
    <h1><%=kindOfday%></h1>
  </div>
  <div class="box">
    <% newitems.forEach(function(items)  { %>
    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=items._id%>" onChange="this.form.submit()">
        <p><%=items.name%></p>
      </div>
      <input type="hidden" name="listName" value="<%= kindOfday %>" ></input>
    </form>
   <%    }); %>
    <form class="item" action="/" method="post">
      <input type="text" name="stuff" placeholder="New item" autocomplete="off">
      <button type="submit" name="list" value=<%= kindOfday %>>+</button>
    </form>
</div>
<%- include("footer") -%>
